<Window x:Class="STOREFLOWER.DeliverWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STOREFLOWER"
        mc:Ignorable="d"
        Title="DeliverWindow" Height="700" Width="920" MinHeight="700" MinWidth="920" Background="{StaticResource BackgroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel x:Name="DelivererInfoStackPanel" Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,5">
            <TextBlock Text="ФИО пользователя:" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="FloristNameTextBlock" FontSize="16"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Активные заказы" FontSize="18" VerticalAlignment="Center"/>
            <ComboBox x:Name="StatusFilterComboBox" Width="200" FontSize="16" HorizontalAlignment="Right" Grid.Column="1" SelectionChanged="StatusFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все" IsSelected="True"/>
                <ComboBoxItem Content="Готовы к доставке"/>
                <ComboBoxItem Content="Доставлены"/>
                <ComboBoxItem Content="Возврат в магазин"/>
            </ComboBox>
        </Grid>
        <DataGrid x:Name="OrdersGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="40" FontSize="16" HeadersVisibility="Column" GridLinesVisibility="All" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto" CanUserSortColumns="True" Sorting="OrdersGrid_Sorting">
            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Заказ" Width="*" SortMemberPath="OrderNumber">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding OrderNumber}" Cursor="Hand" MouseLeftButtonDown="OrderNumber_Click">
                                <TextBlock.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding DataContext.OrderNumber_Click, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"/>
                                </TextBlock.InputBindings>
                            </TextBlock>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreationDate}" Width="*" SortMemberPath="CreationDateTime" />
                <DataGridTextColumn Header="Дата доставки" Binding="{Binding DeliveryDateTime, StringFormat=dd.MM.yyyy, TargetNullValue='Не указана'}" Width="*" SortMemberPath="DeliveryDateTime" />
                <DataGridTemplateColumn Header="Статус" Width="*" SortMemberPath="Status">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Status}" Cursor="Hand" MouseLeftButtonDown="Status_Click"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Покупатель" Binding="{Binding Customer}" Width="*" SortMemberPath="Customer" />
                <DataGridTextColumn Header="Флорист" Binding="{Binding FloristDisplay}" Width="*" SortMemberPath="FloristDisplay" />
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Header="Адреса магазинов" Grid.Row="3" Margin="0,10,0,0" Padding="10" Height="180">
            <ListBox x:Name="ShopsListBox" FontSize="16" BorderThickness="0" Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" FontSize="16" Width="300"/>
                            <TextBlock Text="{Binding Address}" Foreground="Gray" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <Button x:Name="ExitButton" Content="Выход" FontSize="16" Background="{StaticResource AccentBrush}" Foreground="White" Margin="0,10,0,0" Grid.Row="4" Height="35" Width="100" HorizontalAlignment="Left" Click="ExitButton_Click" VerticalAlignment="Top"/>
    </Grid>
</Window>