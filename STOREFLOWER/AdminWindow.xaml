<Window x:Class="STOREFLOWER.AdminWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STOREFLOWER"
        mc:Ignorable="d"
        Title="AdminWindow" Height="700" Width="920" MinHeight="700" MinWidth="920" Background="{StaticResource BackgroundBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="0,0,0,10">
            <TextBlock Text="Адрес магазина:" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="StoreAddressTextBlock" FontSize="16" Margin="0,2,0,10"/>
            <TextBlock Text="ФИО пользователя:" FontWeight="Bold" FontSize="16"/>
            <TextBlock x:Name="AdminNameTextBlock" FontSize="16"/>
        </StackPanel>
        <Grid Grid.Row="1" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="200"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Активные заказы" FontSize="18" VerticalAlignment="Center"/>
            <ComboBox x:Name="StatusFilterComboBox" Width="200" FontSize="16" HorizontalAlignment="Right" Grid.Column="1" SelectionChanged="StatusFilterComboBox_SelectionChanged">
                <ComboBoxItem Content="Все" IsSelected="True"/>
                <ComboBoxItem Content="Ожидают оплаты"/>
                <ComboBoxItem Content="Оплачены"/>
            </ComboBox>
        </Grid>
        <DataGrid x:Name="OrdersGrid" Grid.Row="2" AutoGenerateColumns="False" IsReadOnly="True" RowHeight="40" FontSize="16" HeadersVisibility="Column" GridLinesVisibility="All" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ScrollViewer.VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Заказ" Binding="{Binding OrderNumber}" Width="80"/>
                <DataGridTextColumn Header="Дата создания" Binding="{Binding CreationDate}" Width="*"/>
                <DataGridTextColumn Header="Статус" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Покупатель" Binding="{Binding Customer}" Width="*"/>
                <DataGridTextColumn Header="Телефон клиента" Binding="{Binding ClientPhone}" Width="*"/>
                <DataGridTemplateColumn Header="Флорист" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox Width="250" Height="30" ItemsSource="{Binding AvailableFlorists}" SelectedValue="{Binding FloristId, Mode=TwoWay}" SelectedValuePath="Id" DisplayMemberPath="FullName" IsEditable="True"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <GroupBox Header="Флористы" Grid.Row="3" Margin="0,10,0,0" Padding="5" Height="180">
            <ListBox x:Name="FloristListBox" FontSize="16" BorderThickness="0" Background="White">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="{Binding FullName}" FontWeight="Bold" FontSize="16" Width="300"/>
                            <TextBlock Text="{Binding Phone}" Margin="10,0,0,0" Width="150"/>
                            <TextBlock Text="{Binding Address}" Foreground="Gray" Margin="10,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </GroupBox>
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="0,10,0,0">
            <Button x:Name="CreateOrderButton" Content="Создать заказ" Height="35" Width="160" FontSize="16" Margin="0,0,10,0" Click="CreateOrderButton_Click"/>
            <Button x:Name="ExitButton" Content="Выход" Height="35" Width="100" FontSize="16" Background="{StaticResource AccentBrush}" Foreground="White" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
