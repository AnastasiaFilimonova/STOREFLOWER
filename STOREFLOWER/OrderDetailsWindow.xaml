<Window x:Class="STOREFLOWER.OrderDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STOREFLOWER"
        mc:Ignorable="d"
        Title="OrderDetailsWindow" Height="600" Width="500" Background="{StaticResource BackgroundBrush}">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Детали заказа" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20" Grid.Row="0"/>
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="{Binding OrderNumber, StringFormat='Заказ №{0}'}" FontSize="16" FontWeight="Bold"/>
            <TextBlock Text="{Binding CreationDate, StringFormat='Дата создания: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Customer, StringFormat='Покупатель: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding ClientPhone, StringFormat='Телефон: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding DeliveryAddress, StringFormat='Адрес доставки: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding DeliveryDateTime, StringFormat='Время доставки: {0:dd.MM.yyyy HH:mm}}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding Status, StringFormat='Статус: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding FloristDisplay, StringFormat='Флорист: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="{Binding DelivererDisplay, StringFormat='Доставщик: {0}'}" FontSize="16" Margin="0,5,0,0"/>
            <TextBlock Text="Состав заказа:" FontSize="16" FontWeight="Bold" Margin="0,20,0,5"/>
            <ListBox ItemsSource="{Binding OrderItems}" BorderThickness="0" Background="Transparent">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding ProductName}" Width="200" FontSize="16"/>
                            <TextBlock Text="{Binding Quantity, StringFormat='Количество: {0}'}" Width="100" FontSize="16"/>
                            <TextBlock Text="{Binding Price, StringFormat='Цена: {0:C}'}" Width="100" FontSize="16"/>
                            <TextBlock Text="{Binding TotalPrice, StringFormat='Общая стоимость: {0:C}'}" FontSize="16"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
        <TextBlock Text="{Binding TotalOrderPrice, StringFormat='Итого: {0:C}'}" FontSize="16" FontWeight="Bold" HorizontalAlignment="Right" Grid.Row="2" Margin="0,0,0,10"/>
        <Button Content="Закрыть" Width="100" Height="35" FontSize="16" HorizontalAlignment="Right" Grid.Row="3" Click="CloseButton_Click"/>
    </Grid>
</Window>
