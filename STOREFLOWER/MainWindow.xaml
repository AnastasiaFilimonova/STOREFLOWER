<Window x:Class="STOREFLOWER.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:STOREFLOWER"
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="920" MinHeight="700" MinWidth="920" Background="{StaticResource BackgroundBrush}">
    <Grid Height="700" Width="900">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="350">
            <TextBlock Text="Вход в систему" FontSize="26" FontWeight="Bold" Foreground="#5C5470" TextAlignment="Center" Margin="0,0,0,30"/>
            <TextBlock Text="Логин" FontSize="18" Margin="0,5"/>
            <TextBox x:Name="LoginTextBox" FontSize="18" Height="35" Padding="5"/>
            <TextBlock Text="Пароль" FontSize="18" Margin="0,5"/>
            <PasswordBox x:Name="PasswordTextBox" FontSize="18" Height="35" Padding="5"/>
            <Button Content="Войти" Click="LoginButton_Click" Height="40" FontSize="18" Background="{StaticResource AccentBrush}" Foreground="White" Margin="0,30,0,0"/>
        </StackPanel>
    </Grid>
</Window>

